@{
    ViewBag.Title = "University System Home";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

<style>
    .welcome-hero {
        background: linear-gradient(to right, #e3f2fd, #ffffff);
        padding: 60px 20px;
        border-radius: 20px;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.05);
        text-align: center;
        margin-bottom: 40px;
    }

    .announcement-icon {
        font-size: 1.2rem;
        margin-right: 10px;
        color: #0d6efd;
    }

    .announcement-list .list-group-item {
        border: none;
        border-bottom: 1px solid #eaeaea;
    }
</style>

<div class="container mt-5">

    <!-- 🎓 Welcome Section -->
    <div class="welcome-hero">
        <h1 class="display-5 fw-bold text-primary mb-3">
            🎓 Welcome to the University Management System
        </h1>
        <p class="lead text-secondary">
            A smart portal for students, faculty, and admin to manage academic activities with ease.
        </p>

        <!-- Optional: Image -->
        <!-- Uncomment below line if you want to add a photo -->
        <!-- <img src="~/images/university-banner.jpg" alt="University" class="img-fluid rounded mt-4" style="max-height: 250px;" /> -->
    </div>

    <!-- 📣 Announcements Section -->
    <h3 class="mb-3"><i class="bi bi-megaphone text-primary"></i> Latest Announcements</h3>
    <ul class="list-group announcement-list shadow-sm rounded">
        <li class="list-group-item">
            <i class="bi bi-calendar-check announcement-icon"></i>
            Spring semester registration is now open.
        </li>
        <li class="list-group-item">
            <i class="bi bi-pencil-square announcement-icon"></i>
            Midterm exams will begin on <strong>May 20</strong>.
        </li>
        <li class="list-group-item">
            <i class="bi bi-plus-circle announcement-icon"></i>
            New courses added for the summer term.
        </li>
    </ul>
</div>
