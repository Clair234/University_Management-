@model UniversitySystem.Models.Course

@{
    ViewBag.Title = "Delete Course";
}

<div class="container mt-5">
    <h2>Are you sure you want to delete this course?</h2>

    <dl class="row">
        <dt class="col-sm-3">Course Name</dt>
        <dd class="col-sm-9">@Model.CourseName</dd>
    </dl>

    <form asp-action="DeleteCourse" method="post">
        <input type="hidden" asp-for="CourseID" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a href="@Url.Action("Courses", "Faculty", new { userId = Model.InstructorID })" class="btn btn-secondary">Cancel</a>
    </form>
</div>

