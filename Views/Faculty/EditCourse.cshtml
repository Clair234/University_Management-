@model UniversitySystem.Models.Course

@{
    ViewBag.Title = "Edit Course";
}

<div class="container mt-5">
    <h2>Edit Course</h2>

    <form asp-action="EditCourse" method="post">
        <input type="hidden" asp-for="CourseID" />

        <div class="form-group">
            <label asp-for="CourseName"></label>
            <input asp-for="CourseName" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="CourseDescription"></label>
            <textarea asp-for="CourseDescription" class="form-control"></textarea>
        </div>

        <div class="form-group">
            <label asp-for="CreditHours"></label>
            <input asp-for="CreditHours" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Department"></label>
            <input asp-for="Department" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Semaster"></label>
            <input asp-for="Semaster" class="form-control" />
        </div>

        <button type="submit" class="btn btn-primary">Save</button>
        <a href="@Url.Action("Courses", "Faculty", new { userId = Model.InstructorID })" class="btn btn-secondary">Cancel</a>
    </form>
</div>
