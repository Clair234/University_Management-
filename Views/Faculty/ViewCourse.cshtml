@model UniversitySystem.Models.Course

@{
    ViewBag.Title = "Course Details";
}

<div class="container mt-5">
    <h2>Course Details</h2>
    <dl class="row">
        <dt class="col-sm-3">Course Name</dt>
        <dd class="col-sm-9">@Model.CourseName</dd>

        <dt class="col-sm-3">Description</dt>
        <dd class="col-sm-9">@Model.CourseDescription</dd>

        <dt class="col-sm-3">Credit Hours</dt>
        <dd class="col-sm-9">@Model.CreditHours</dd>

        <dt class="col-sm-3">Department</dt>
        <dd class="col-sm-9">@Model.Department</dd>

        <dt class="col-sm-3">Semester</dt>
        <dd class="col-sm-9">@Model.Semaster</dd>
    </dl>
    <a href="@Url.Action("Courses", "Faculty", new { userId = Model.InstructorID })" class="btn btn-secondary">Back</a>
</div>
