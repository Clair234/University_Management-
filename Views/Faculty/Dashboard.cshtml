@{
    ViewBag.Title = "Faculty Dashboard";
}

<!-- Optional: Bootstrap Icons CDN -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />

<div class="container">
    <div class="row">
        <div class="col-12 mb-4">
            <div class="card border-0 shadow-sm bg-primary text-white rounded-4">
                <div class="card-body">
                    <h2 class="card-title mb-2">
                        <i class="bi bi-person-circle me-2"></i>Welcome, Faculty
                    </h2>
                    <p class="card-text">View your assigned courses and student advisees below.</p>
                </div>
            </div>
        </div>

        <!-- My Courses Card -->
        <div class="col-md-6 mb-4">
            <div class="card border-0 shadow-sm rounded-4">
                <div class="card-body">
                    <h5 class="card-title text-primary">
                        <i class="bi bi-journal-bookmark-fill me-2"></i>My Courses
                    </h5>
                    <p class="card-text">View and manage the courses you're teaching.</p>
                    <a href="@Url.Action("Courses", "Faculty", new { userId = Model.Id })" class="btn btn-primary">
                        <i class="bi bi-arrow-right-circle-fill me-1"></i> Go to My Courses
                    </a>
                </div>
            </div>
        </div>

        <!-- Student Advising Card -->
        <div class="col-md-6 mb-4">
            <div class="card border-0 shadow-sm rounded-4">
                <div class="card-body">
                    <h5 class="card-title text-info">
                        <i class="bi bi-people-fill me-2"></i>Student Advising
                    </h5>
                    <p class="card-text">Access your list of advisees and assist them in academic planning.</p>
                    <a href="@Url.Action("Advising", "Faculty", new { userId = Model.Id })" class="btn btn-info text-white">
                        <i class="bi bi-person-lines-fill me-1"></i> View Advisees
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
