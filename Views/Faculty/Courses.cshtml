@model List<UniversitySystem.Models.Course>

@{
    ViewBag.Title = "My Courses";
}

<h2>My Courses</h2>

<table class="table">
    <thead>
        <tr>
            <th>Course Name</th>
            <th>Credit Hours</th>
            <th>Semester</th>
            <th>Department</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var course in Model)
        {
            <tr>
                <td>@course.CourseName</td>
                <td>@course.CreditHours</td>
                <td>@course.Semaster</td>
                <td>@course.Department</td>
                <td>
                    <a asp-action="ViewCourse" asp-route-id="@course.CourseID" class="btn btn-secondary btn-sm">View</a>
                    <a asp-action="EditCourse" asp-route-id="@course.CourseID" class="btn btn-info btn-sm">Edit</a>
                    <a asp-action="DeleteCourse" asp-route-id="@course.CourseID" class="btn btn-danger btn-sm">Delete</a>

                </td>
            </tr>
        }
    </tbody>
</table>
