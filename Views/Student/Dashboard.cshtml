@model UniversitySystem.Models.User

@{
    ViewData["Title"] = "Student Dashboard";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />

<style>
    body {
        background-color: #f8f9fa;
        color: #212529;
        font-weight: bold;
    }

    .welcome-section {
        background-color: #e3f2fd;
        padding: 2.5rem;
        border-radius: 1rem;
        text-align: center;
        margin-bottom: 2rem;
        box-shadow: 0 0.5rem 1rem rgba(0,0,0,0.1);
    }

        .welcome-section h1 {
            font-size: 2.5rem;
            color: #0d6efd;
            font-weight: bold;
        }

        .welcome-section p {
            font-size: 1.2rem;
            color: #495057;
            font-weight: bold;
        }

    .dashboard-card {
        border: 1px solid #dee2e6;
        border-radius: 1rem;
        transition: 0.3s ease;
        text-align: center;
        padding: 2rem;
        background-color: #ffffff;
        box-shadow: 0 0.25rem 0.75rem rgba(0,0,0,0.05);
        font-weight: bold;
    }

        .dashboard-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 0.75rem 1.5rem rgba(0,0,0,0.1);
        }

    .dashboard-icon {
        font-size: 2.5rem;
        margin-bottom: 1rem;
    }

    .text-blue {
        color: #0d6efd;
    }

    .dashboard-card h5 {
        color: #0d6efd;
        font-weight: bold;
    }

    .dashboard-card p {
        color: #6c757d;
        font-weight: bold;
        margin: 0;
    }

    a.text-decoration-none {
        font-weight: bold;
    }
</style>

<div class="container py-5">
    <!-- Welcome Section -->
    <div class="welcome-section">
        <h1>Welcome, @Model.Username! 👋</h1>
		<p><p>Your ID :@Model.Id</p>
        <p>Explore your dashboard and stay on top of your academics.</p>
    </div>

    <!-- Dashboard Cards -->
    <div class="row g-4">
        <div class="col-md-4">
            <a href="@Url.Action("Courses", "Student", new { userId = Model.Id })" class="text-decoration-none">
                <div class="dashboard-card">
                    <i class="bi bi-journal-check dashboard-icon text-blue"></i>
                    <h5>My Courses</h5>
                    <p>Check your registered courses</p>
                </div>
            </a>
        </div>

        <div class="col-md-4">
            <a href="@Url.Action("AvailableCourses", "Student", new { userId = Model.Id })" class="text-decoration-none">
                <div class="dashboard-card">
                    <i class="bi bi-journal-plus dashboard-icon text-success"></i>
                    <h5>Available Courses</h5>
                    <p>Register for new courses</p>
                </div>
            </a>
        </div>

        <div class="col-md-4">
            <a href="@Url.Action("Grades", "Student", new { userId = Model.Id })" class="text-decoration-none">
                <div class="dashboard-card">
                    <i class="bi bi-bar-chart-line dashboard-icon text-info"></i>
                    <h5>Grades</h5>
                    <p>View your academic progress</p>
                </div>
            </a>
        </div>

        

        <div class="col-md-4">
            <a href="@Url.Action("Profile", "Student", new { userId = Model.Id })" class="text-decoration-none">
                <div class="dashboard-card">
                    <i class="bi bi-person-circle dashboard-icon text-secondary"></i>
                    <h5>Profile</h5>
                    <p>Update your information</p>
                </div>
            </a>
        </div>

        
    </div>
</div>
