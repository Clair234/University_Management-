@model List<UniversitySystem.Models.Course>
@{
    ViewData["Title"] = "My Registered Courses";
}
<h2>My Registered Courses</h2>

<div class="row mb-3">
    <div class="col">
        <a href="@Url.Action("AvailableCourses", "Student", new { userId = Context.Request.Query["userId"] })" class="btn btn-primary">View Available Courses</a>
    </div>
</div>

@if (Model.Count == 0)
{
    <div class="alert alert-info">
        You are not registered for any courses yet. Click the button above to view available courses.
    </div>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Course Name</th>
                <th>Description</th>
                <th>Credit Hours</th>
                <th>Department</th>
                <th>Instructor</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var course in Model)
            {
                <tr>
                    <td>@course.CourseName</td>
                    <td>@course.CourseDescription</td>
                    <td>@course.CreditHours</td>
                    <td>@course.Department</td>
                    <td>@course.InstructorName</td>
                </tr>
            }
        </tbody>
    </table>
}
