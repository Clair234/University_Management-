@model UniversitySystem.Models.Student

@{
    ViewData["Title"] = "Confirm Delete S";
}

<div class="container mt-4">
    <h2>Confirm Delete</h2>

    <div class="alert alert-danger">
        <h4>Are you sure you want to delete this student?</h4>
        <p>This action cannot be undone.</p>
    </div>

    <div class="card mb-3">
        <div class="card-body">
            <h5 class="card-title">@Model.FullName</h5>
            <p><strong>Email:</strong> @Model.Email</p>
            @if (!string.IsNullOrEmpty(Model.Phone))
            {
                <p><strong>Phone:</strong> @Model.Phone</p>
            }
        </div>
    </div>

    <form asp-action="ConfirmDeleteS" method="post">
        <input type="hidden" name="userid" value="@Model.UserID" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a href="@Url.Action("ManageStudents", "Admin")" class="btn btn-secondary">Cancel</a>
    </form>
</div>