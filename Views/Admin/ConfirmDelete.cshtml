@model UniversitySystem.Models.Course

@{
    ViewBag.Title = "Confirm Delete";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />

<style>
    body {
        background-color: #f0f4f8;
        color: #212529;
        font-family: 'Segoe UI', sans-serif;
        font-weight: bold;
    }

    h2 {
        color: #dc3545;
        font-weight: bold;
        margin-bottom: 20px;
    }

    p {
        font-size: 1.1rem;
        color: #495057;
    }

    .dl-horizontal dt {
        font-weight: bold;
        color: #0d6efd;
    }

    .btn-danger {
        font-weight: bold;
        border-radius: 10px;
        padding: 10px 20px;
        background-color: #dc3545;
        border-color: #dc3545;
    }

        .btn-danger:hover {
            background-color: #bb2d3b;
        }

    .btn-secondary {
        font-weight: bold;
        border-radius: 10px;
        padding: 10px 20px;
        background-color: #6c757d;
        border-color: #6c757d;
    }

    .confirm-box {
        background-color: #ffffff;
        padding: 30px;
        border-radius: 12px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.05);
    }

    dt {
        color: #0d6efd;
    }

    dd {
        color: #212529;
    }
</style>

<div class="container mt-5">
    <div class="confirm-box">
        <h2><i class="bi bi-exclamation-triangle-fill me-2"></i>Confirm Delete</h2>
        <p>Are you sure you want to delete the following course?</p>

        <dl class="row">
            <dt class="col-sm-3">Course Name</dt>
            <dd class="col-sm-9">@Model.CourseName</dd>

            <dt class="col-sm-3">Department</dt>
            <dd class="col-sm-9">@Model.Department</dd>

            <dt class="col-sm-3">Instructor</dt>
            <dd class="col-sm-9">@Model.InstructorName</dd>
        </dl>

        <form asp-action="ConfirmDelete" method="post">
            <input type="hidden" asp-for="CourseID" />
            <button type="submit" class="btn btn-danger mt-3 me-2">
                <i class="bi bi-trash me-1"></i> Yes, Delete
            </button>
            <a asp-action="ManageCourses" class="btn btn-secondary mt-3">
                <i class="bi bi-x-circle me-1"></i> Cancel
            </a>
        </form>
    </div>
</div>
