@model UniversitySystem.Models.Faculty

@{
    ViewBag.Title = "Create Faculty";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />

<style>
    body {
        background-color: #f0f4f8;
        font-family: 'Segoe UI', sans-serif;
    }

    h2 {
        color: #0d6efd;
        font-weight: bold;
        margin-bottom: 25px;
    }

    .form-label {
        font-weight: bold;
        color: #0d6efd;
    }

    .form-control {
        border-radius: 8px;
        font-weight: bold;
    }

    .btn {
        border-radius: 10px;
        padding: 10px 20px;
    }

    .form-section {
        background-color: #fff;
        padding: 30px;
        border-radius: 12px;
        box-shadow: 0 0 15px rgba(0,0,0,0.05);
    }
</style>

<div class="container mt-5">
    <div class="form-section">
        <h2><i class="bi bi-person-plus me-2"></i>Create Faculty</h2>

        <form asp-action="CreateFaculty" method="post">
            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" type="email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="phone" class="form-label"></label>
                <input asp-for="phone" class="form-control" />
                <span asp-validation-for="phone" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Gender" class="form-label"></label>
                <select asp-for="Gender" class="form-control">
                    <option value="">-- Select Gender --</option>
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                </select>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Department" class="form-label"></label>
                <select asp-for="Department" class="form-control">
                    <option value="">-- Select Department --</option>
                    <option value="IS">IS</option>
                    <option value="CS">CS</option>
                    <option value="AI">AI</option>
                    <option value="Data Science">Data Science</option>
                    <option value="Cyber Security">Cyber Security</option>
                    <option value="Software Engineer">Software Engineer</option>
                </select>
                <span asp-validation-for="Department" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Title" class="form-label"></label>
                <select asp-for="Title" class="form-control">
                    <option value="">-- Select Title --</option>
                    <option value="Professor">Professor</option>

                </select>
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" class="form-control" type="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            

            <div class="mb-3">
                <label asp-for="UserID" class="form-label"></label>
                <input asp-for="UserID" class="form-control" />
                <span asp-validation-for="UserID" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-success mt-3 me-2">
                <i class="bi bi-check-circle me-1"></i> Create
            </button>
            <a asp-action="ManageFaculty" class="btn btn-secondary mt-3">
                <i class="bi bi-x-circle me-1"></i> Cancel
            </a>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
