@model UniversitySystem.Models.Student

@{
    ViewBag.Title = "Student Details";
}

<div class="container mt-5">
    <div class="card shadow p-4">
        <h2 class="mb-4 text-primary">Student Details</h2>

        <dl class="row">
            <dt class="col-sm-4">Full Name</dt>
            <dd class="col-sm-8">@Model.FullName</dd>

            <dt class="col-sm-4">Email</dt>
            <dd class="col-sm-8">@Model.Email</dd>

            <dt class="col-sm-4">Phone</dt>
            <dd class="col-sm-8">@Model.Phone</dd>

            <dt class="col-sm-4">National ID</dt>
            <dd class="col-sm-8">@Model.NationalID</dd>

            <dt class="col-sm-4">Date of Birth</dt>
            <dd class="col-sm-8">@Model.DateOfBirth.ToString("yyyy-MM-dd")</dd>

            <dt class="col-sm-4">Gender</dt>
            <dd class="col-sm-8">@Model.Gender</dd>

            <dt class="col-sm-4">Address</dt>
            <dd class="col-sm-8">@Model.Address</dd>

            <dt class="col-sm-4">City</dt>
            <dd class="col-sm-8">@Model.City</dd>

            <dt class="col-sm-4">GPA</dt>
            <dd class="col-sm-8">@Model.GPA</dd>

            
            
        </dl>

        <a asp-action="ManageStudents" class="btn btn-secondary mt-3">
            <i class="bi bi-arrow-left"></i> Back
        </a>
    </div>
</div>
