@model IEnumerable<UniversitySystem.Models.Faculty>

@{
    ViewData["Title"] = "Manage Faculties";
}


<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

<style>
    body {
        background-color: #f0f4f8;
        color: #212529;
        font-weight: bold;
    }

    h2 {
        font-weight: bold;
        margin-bottom: 25px;
        color: #0d6efd;
    }

    .container {
        background-color: #ffffff;
        padding: 30px;
        border-radius: 12px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.05);
        margin-top: 40px;
    }

    .table {
        background-color: #ffffff;
        border-radius: 10px;
        overflow: hidden;
        font-weight: bold;
    }

        .table thead {
            background-color: #e3f2fd;
            color: #0d6efd;
        }

        .table th,
        .table td {
            vertical-align: middle;
            border-color: #dee2e6;
        }

    .btn-info {
        background-color: #0dcaf0;
        border-color: #0dcaf0;
        color: black;
        font-weight: bold;
    }

        .btn-info:hover {
            background-color: #31d2f2;
        }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
        font-weight: bold;
    }

        .btn-danger:hover {
            background-color: #bb2d3b;
        }

    .text-muted {
        font-weight: bold;
    }
</style>

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <a href="@Url.Action("CreateFaculty", "Admin")" class="btn btn-success btn-custom">
            <i class="bi bi-plus-circle"></i> Add New Professor
        </a>
    </div>

<div class="container">
    <h2><i class="bi bi-people-fill me-2"></i>Manage Professors</h2>

    @if (!Model.Any())
    {
        <p class="text-muted">No Faculties found in the system.</p>
    }
    else
    {
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Full Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var Faculty in Model)
                {
                    <tr>
                        <td>@Faculty.UserID</td>
                        <td>@Faculty.Name</td>
                        <td>@Faculty.Email</td>
                        <td>@Faculty.phone</td>
                        <td>
                                <a href="@Url.Action("EditFaculty", "Admin", new { id = Faculty.UserID })" class="btn btn-edit btn-sm me-2">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>

                                <a href="@Url.Action("FacultyDetails", "Admin", new { id = Faculty.UserID })" class="btn btn-info btn-sm me-1">
                                    <i class="bi bi-eye-fill"></i> View
                                </a>

                            <a href="@Url.Action("ConfirmDeleteF", "Admin", new { id = Faculty.UserID })" class="btn btn-danger btn-sm">
                                <i class="bi bi-trash-fill"></i> Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
