@model UniversitySystem.Models.Faculty

@{
    ViewBag.Title = "Faculty Details";
}

<div class="container mt-5">
    <div class="card shadow p-4">
        <h2 class="text-primary mb-4">Faculty Member Details</h2>

        <dl class="row">
            <dt class="col-sm-3">Name</dt>
            <dd class="col-sm-9">@Model.Name</dd>

            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9">@Model.Email</dd>

            <dt class="col-sm-3">Phone</dt>
            <dd class="col-sm-9">@Model.phone</dd>

            <dt class="col-sm-3">Gender</dt>
            <dd class="col-sm-9">@Model.Gender</dd>

            <dt class="col-sm-3">Department</dt>
            <dd class="col-sm-9">@Model.Department</dd>

            <dt class="col-sm-3">Title</dt>
            <dd class="col-sm-9">@Model.Title</dd>

            
        </dl>

        <a asp-action="ManageFaculties" class="btn btn-secondary"><i class="bi bi-arrow-left-circle"></i> Back</a>
    </div>
</div>
