@model List<UniversitySystem.Models.Course>

@{
    ViewBag.Title = "Manage All Courses";
}

<!-- Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />

<style>
    body {
        background-color: #f0f4f8;
        color: #212529;
        font-weight: bold;
    }

    h2 {
        font-size: 2.2rem;
        font-weight: bold;
        color: #0d6efd;
    }

    .btn-custom {
        font-weight: bold;
        border-radius: 8px;
        padding: 8px 16px;
    }

    .table {
        background-color: #ffffff;
        color: #212529;
        border-radius: 0.5rem;
        overflow: hidden;
        font-weight: bold;
    }

        .table thead {
            background-color: #e3f2fd;
            color: #0d6efd;
        }

        .table th,
        .table td {
            vertical-align: middle;
            border-color: #dee2e6;
        }

    .btn-edit {
        background-color: #ffc107;
        color: #000;
        border: none;
        font-weight: bold;
    }

    .btn-delete {
        background-color: #dc3545;
        color: #fff;
        border: none;
        font-weight: bold;
    }

        .btn-edit:hover,
        .btn-delete:hover {
            opacity: 0.9;
        }

    .no-courses {
        color: #dc3545;
        font-size: 1.2rem;
        font-weight: bold;
    }

    .container {
        background-color: #ffffff;
        padding: 30px;
        border-radius: 12px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.05);
        margin-top: 40px;
    }
</style>

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-journals"></i> Manage All Courses</h2>
        <a href="@Url.Action("CreateCourse", "Admin")" class="btn btn-success btn-custom">
            <i class="bi bi-plus-circle"></i> Add New Course
        </a>
    </div>

    @if (!Model.Any())
    {
        <p class="no-courses">📘 No courses in the system yet.</p>
    }
    else
    {
        <div class="table-responsive rounded shadow">
            <table class="table table-bordered text-center">
                <thead>
                    <tr>
                        <th>Course ID</th>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Instructor ID</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var course in Model)
                    {
                        <tr>
                            <td>@course.CourseID</td>
                            <td>@course.CourseName</td>
                            <td>@course.CourseDescription</td>
                            <td>@course.InstructorID</td>
                            <td>
                                <a href="@Url.Action("EditCourse", "Admin", new { id = course.CourseID })" class="btn btn-edit btn-sm me-2">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a href="@Url.Action("ConfirmDelete", "Admin", new { id = course.CourseID })" class="btn btn-delete btn-sm">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
